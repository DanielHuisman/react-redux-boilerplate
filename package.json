{
  "name": "@danielhuisman/react-redux-boilerplate",
  "description": "Boilerplate for React + Redux + Webpack + Hot Loader. Highly opinionated as it's intended for personal use.",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "author": "Daniel Huisman <daniel@huisman.me> (https://danielhuisman.io)",
  "repository": "https://github.com/DanielHuisman/react-redux-boilerplate.git",
  "keywords": [
    "react",
    "redux",
    "webpack",
    "hotloader",
    "boilerplate"
  ],
  "scripts": {
    "lint": "eslint --color src",
    "clean": "rimraf dist",
    "build": "yarn run clean && yarn run build:webpack && yarn run build:static && yarn run build:server",
    "build:webpack": "cross-env NODE_ENV=production babel-node ./node_modules/.bin/webpack --config webpack.production.js",
    "build:static": "copyfiles static/* dist",
    "build:server": "cross-env NODE_ENV=production babel src/server --out-dir dist/server --source-maps && yarn run build:server:templates",
    "build:server:templates": "copyfiles -u 2 src/server/views/* dist/server",
    "dev": "webpack-dashboard --title redux-react-boilerplate -- babel-node src/server/dev.js",
    "start": "cross-env NODE_ENV=production node dist/server/index.js"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.1.0",
    "dot": "^1.1.2",
    "dotenv": "^4.0.0",
    "history": "^4.7.2",
    "koa": "^2.3.0",
    "koa-compress": "^2.0.0",
    "koa-conditional-get": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-etag": "^3.0.0",
    "koa-helmet": "^3.2.0",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.2.1",
    "koa-static-server": "^1.3.2",
    "mkdirp": "^0.5.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.7.2",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "copyfiles": "^1.2.0",
    "cross-env": "^4.0.0",
    "debug": "^2.6.3",
    "eslint": "^4.6.1",
    "eslint-config-google": "^0.9.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.3.0",
    "koa-webpack-middleware": "^1.0.7",
    "react-hot-loader": "3.0.0-alpha.6",
    "rimraf": "^2.6.1",
    "webpack": "^3.5.5",
    "webpack-dashboard": "^1.0.0-5",
    "webpack-dev-server": "^2.7.1"
  }
}
